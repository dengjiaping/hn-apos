<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBackGround"
    android:orientation="vertical"
    android:paddingTop="50dip" >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/com_no_color"
        android:src="@drawable/com_icon_connection_failure_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:text="@string/conection_exception"
        android:textColor="@color/main_show_font_color"
        android:textSize="20sp" />

    <Button
        android:id="@+id/refresh_btn"
        style="@style/com_button_style"
        android:layout_width="match_parent"
        android:layout_below="@+id/com_net_error_tv"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="30dp"
        android:text="@string/com_net_error_button_str" />

</LinearLayout>