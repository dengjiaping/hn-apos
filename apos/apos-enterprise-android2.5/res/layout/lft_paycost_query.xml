<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout style="@style/com_native_top_style" >

        <TextView
            style="@style/com_top_text_style"
            android:text="@string/lft_cost_query_str" />

        <ImageView
            android:id="@+id/lft_lft_paycost_query_back"
            style="@style/com_top_return_button_style" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView
            android:id="@+id/lft_paycost_query_unit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="欠费月数"
            android:textColor="@color/com_title_normal_col"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lft_paycost_query_id"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="right"
            android:text="缴费单号"
            android:textColor="@color/com_title_normal_col"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/dotted_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="应缴金额"
            android:textColor="@color/com_title_normal_col"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lft_paycost_query_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:text="38.7"
            android:textColor="@color/com_title_normal_col"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/lft_paycost_query_deatail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/lft_paycost_query_money"
            android:layout_below="@id/lft_paycost_query_money"
            android:background="@color/transparent"
            android:text="[详情 ]"
            android:textColor="@color/com_title_normal_col"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/lft_paycost_query_true_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/com_icon_frame_img"
        android:paddingBottom="9dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="9dip"
        android:singleLine="true"
        android:text="实缴 38.70"
        android:textColor="@color/com_title_normal_col"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:src="@drawable/dotted_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dip"
        android:text="用户名称"
        android:textColor="@color/com_title_normal_col"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/lft_paycost_query_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="*勇"
        android:textColor="@color/com_title_normal_col"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:src="@drawable/dotted_line" />

    <Button
        android:id="@+id/lft_paycost_query_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="60dp"
        android:background="@drawable/com_button_selector"
        android:enabled="true"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:text="确定"
        android:textColor="@drawable/com_text_color_selector"
        android:textSize="20sp" />

</LinearLayout>