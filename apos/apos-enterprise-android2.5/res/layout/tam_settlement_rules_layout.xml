<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/tam_settlement_top_layout"
        style="@style/com_native_top_style" >

        <TextView
            android:id="@+id/tam_settlement_title"
            style="@style/com_top_text_style"
            android:text="@string/tam_settlement_rules_str" />

        <Button
            android:id="@+id/tam_settlement_back_btn"
            style="@style/com_top_button_style"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:text="@string/com_login_out_str" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/tam_settlement_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tam_settlement_top_layout"
        android:layout_centerHorizontal="true"
        android:fillViewport="true"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/tam_settlement_rules_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tam_settlement_rule1_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="18dp"
                android:gravity="left"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1"
                android:text="@string/tam_settlement_rules1_str"
                android:textColor="#666666"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tam_settlement_rule2_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tam_settlement_rule1_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:gravity="left"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1"
                android:text="@string/tam_settlement_rules2_str"
                android:textColor="#666666"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tam_settlement_rule3_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tam_settlement_rule2_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:gravity="left"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1"
                android:text="@string/tam_settlement_rules3_str"
                android:textColor="#666666"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/tam_settlement_seg1_img"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tam_settlement_rule3_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/com_solid_line_img" />

            <TextView
                android:id="@+id/tam_settlement_rule4_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tam_settlement_seg1_img"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:gravity="left"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1"
                android:text="@string/tam_settlement_rules4_str"
                android:textColor="#666666"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tam_settlement_rule5_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tam_settlement_rule4_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:gravity="left"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1"
                android:text="@string/tam_settlement_rules5_str"
                android:textColor="#666666"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/tam_settlement_23before_img"
                android:layout_width="205dp"
                android:layout_height="105dp"
                android:layout_below="@id/tam_settlement_rule5_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/com_rules_23before_img" />

            <ImageView
                android:id="@+id/tam_settlement_seg2_img"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tam_settlement_23before_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/com_solid_line_img" />

            <TextView
                android:id="@+id/tam_settlement_rule6_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tam_settlement_seg2_img"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:gravity="left"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1"
                android:text="@string/tam_settlement_rules6_str"
                android:textColor="#666666"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tam_settlement_rule7_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tam_settlement_rule6_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1"
                android:text="@string/tam_settlement_rules7_str"
                android:textColor="#666666"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/tam_settlement_23after_img"
                android:layout_width="244dp"
                android:layout_height="108dp"
                android:layout_below="@id/tam_settlement_rule7_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/com_rules_23after_img" />

            <TextView
                android:id="@+id/tam_settlement_blank_txt"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/tam_settlement_23after_img"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>