<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/com_top_layout"
        style="@style/com_native_top_style"
         >

        <TextView
            android:id="@+id/scm_main_title_tv"
            style="@style/com_top_text_style"
            android:text="@string/scm_manager_center_str" />

        <ImageView
            android:id="@+id/scm_top_back_btn"
            style="@style/com_top_return_button_style" >
        </ImageView>
    </RelativeLayout>

    <WebView
        android:id="@+id/scm_mds_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/com_top_layout" />

    <RelativeLayout
        android:id="@+id/com_bottom_layout"
        style="@style/com_native_bottom_style"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/com_tool_img" >

        <ImageView
            android:id="@+id/scm_webview_back"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:background="#00000000"
            android:src="@drawable/com_webview_back_selector" />

        <ImageView
            android:id="@+id/scm_webview_forward"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/scm_webview_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="58dp"
            android:background="#00000000"
            android:src="@drawable/com_webview_forward_selector" />

        <ImageView
            android:id="@+id/scm_webview_refresh"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="#00000000"
            android:src="@drawable/com_webview_refresh_selector" />
    </RelativeLayout>

</RelativeLayout>