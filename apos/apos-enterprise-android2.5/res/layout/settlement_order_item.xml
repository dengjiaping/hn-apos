<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/com_list_f0f0f0_item_selector"
    android:orientation="vertical"
    android:padding="5dip" >

    <TextView
        android:id="@+id/settlement_order_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统参考号"
        android:textColor="#666666"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/settlement_order_item_tranding_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易比数"
            android:textColor="#666666"
            android:textSize="15sp" />

        <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/settlement_order_item_merchants_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户费用 345"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/settlement_order_item_tranding_accounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易金额 120"
            android:textColor="#666666"
            android:textSize="15sp" />

        <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/settlement_order_item_settlement_accounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算金额 456"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>