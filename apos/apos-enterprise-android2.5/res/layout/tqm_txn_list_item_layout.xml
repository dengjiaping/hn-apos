<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="34dp"
        layout="@layout/vas_purchaseorder_section_layout" />

    <RelativeLayout
        android:id="@+id/vas_purchase_order_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/com_list_f0f0f0_item_selector"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tqm_txn_list_item_type_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/com_icon_succeed_img" />

        <TextView
            android:id="@+id/tqm_txn_list_item_amount_tv"
            style="@style/com_item_title_text_style"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/tqm_txn_list_item_type_img"
            android:text="#240.00" />

        <TextView
            android:id="@+id/tqm_txn_list_item_bank_tv"
            style="@style/com_item_content_text_style"
            android:layout_below="@+id/tqm_txn_list_item_amount_tv"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/tqm_txn_list_item_type_img"
            android:text="@string/vas_value_service_str" />

        <TextView
            android:id="@+id/tqm_txn_list_item_cardno_tv"
            style="@style/com_item_content_text_style"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tqm_txn_list_item_amount_tv"
            android:layout_marginRight="7dp"
            android:layout_marginTop="4dp"
            android:text="@string/vas_value_service_str" />

        <TextView
            android:id="@+id/tqm_txn_list_item_type_tv"
            style="@style/com_item_content_text_style"
            android:layout_below="@+id/tqm_txn_list_item_bank_tv"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/tqm_txn_list_item_type_img"
            android:text="@string/vas_value_service_str" />

        <TextView
            android:id="@+id/tqm_txn_list_item_time_tv"
            style="@style/com_item_title_text_style"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="4dp"
            android:text="23:00:00" />

        <TextView
            android:id="@+id/tqm_txn_list_item_refund_tv"
            style="@style/com_item_red_text_style"
            android:layout_below="@+id/tqm_txn_list_item_bank_tv"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/tqm_txn_list_item_type_tv"
            android:text="23:00:00" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/tqm_txn_list_item_type_tv"
            android:text=" " />
    </RelativeLayout>

</LinearLayout>