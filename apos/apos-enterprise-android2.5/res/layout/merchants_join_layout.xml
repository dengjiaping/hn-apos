<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout style="@style/com_native_top_style" >

        <TextView
            style="@style/com_top_text_style"
            android:text="商家加盟" />

        <ImageView
            android:id="@+id/mmaking_join_back"
            style="@style/com_top_return_button_style" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择加入"
            android:textColor="@color/main_show_font_color"
            android:textSize="15sp" />

        <RadioButton
            android:checked="true"
            android:id="@+id/merchants_join_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="积分商户"
            android:textSize="15sp"
            android:textColor="@color/main_show_font_color" />

        <RadioButton
            android:id="@+id/merchants_join_coupons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="优惠券商户"
            android:textSize="15sp"
            android:textColor="@color/main_show_font_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家名称"
            android:textColor="@color/main_show_font_color"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/merchants_join_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:hint="你的商家名称或公司名称"
            android:singleLine="true"
            android:textColor="@color/main_show_font_color"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家类别"
            android:textColor="@color/main_show_font_color"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/merchants_join_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:hint="你的商家类别,入超市，餐饮等"
            android:singleLine="true"
            android:textColor="@color/main_show_font_color"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textColor="@color/main_show_font_color"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/merchants_join_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:hint="你的联系电话，座机请加区号"
            android:singleLine="true"
            android:textColor="@color/main_show_font_color"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家地址"
            android:textColor="@color/main_show_font_color"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/merchants_join_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:hint="你的商家地址"
            android:singleLine="true"
            android:textColor="@color/main_show_font_color"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家简介"
            android:textColor="@color/main_show_font_color"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/merchants_join_introduce"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:layout_marginLeft="5dip"
            android:gravity="top"
            android:hint="请输入你的介绍"
            android:textColor="@color/main_show_font_color"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/merchants_join_commit"
        style="@style/com_button_style"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:enabled="false"
        android:text="@string/lam_login_btn_str" />

</LinearLayout>