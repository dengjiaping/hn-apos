<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:paddingBottom="50dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="50dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lft_select_dailog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center"
            android:padding="10dip"
            android:text="选择充值面额"
            android:textColor="@color/com_title_normal_col"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/scm_solid_line_img" />

        <ListView
            android:id="@+id/lft_select_dailog_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:cacheColorHint="@color/transparent"
            android:divider="@drawable/scm_solid_line_img"
            android:listSelector="@color/transparent" >
        </ListView>
    </LinearLayout>

</RelativeLayout>