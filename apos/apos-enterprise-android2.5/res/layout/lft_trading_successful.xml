<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout style="@style/com_native_top_style" >

        <TextView
            android:id="@+id/lft_trading_successful_showtxt"
            style="@style/com_top_text_style" />

        <ImageView
            android:id="@+id/lft_trading_successful_back"
            style="@style/com_top_return_button_style" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/lft_trading_successful_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dip"
        android:src="@drawable/com_salesslip_succeed_img" />

    <TextView
        android:id="@+id/lft_trading_successful_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dip"
        android:text="充值成功"
        android:textColor="@color/main_show_font_color"
        android:textSize="25sp" />

</LinearLayout>