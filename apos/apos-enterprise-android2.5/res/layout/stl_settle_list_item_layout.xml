<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="34dp"
        layout="@layout/vas_purchaseorder_section_layout" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/com_list_f0f0f0_item_selector"
        android:descendantFocusability="blocksDescendants" >

        <TextView
            android:id="@+id/stl_settle_amt_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:gravity="left|center_vertical"
            android:text="￥200003.00"
            android:textColor="@color/tqm_list_item_amount_col"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/stl_settle_count_tv"
            style="@style/com_item_content_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"
            android:text="25笔交易" />

        <TextView
            android:id="@+id/stl_settle_time_tv"
            style="@style/com_item_content_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/stl_settle_count_tv"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:text="8-14" />
    </RelativeLayout>

</LinearLayout>