<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/com_list_f0f0f0_item_selector"
    android:padding="10dip" >

    <TextView
        android:layout_marginTop="5dip"
        android:layout_marginLeft="10dip"
        android:id="@+id/msg_message_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天一起吃早餐"
        android:textColor="@color/tqm_list_item_amount_col" />

    <TextView
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:id="@+id/msg_message_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/msg_message_item_title"
        android:layout_below="@id/msg_message_item_title"
        android:text="2014-06-12"
        android:textColor="@color/tqm_list_item_amount_col" />

    <TextView
        android:id="@+id/msg_message_item_isreader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="已读"
        android:textColor="@color/tqm_list_item_amount_col" />

    <ImageView
        android:id="@+id/msg_message_isReader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hong" />

</RelativeLayout>