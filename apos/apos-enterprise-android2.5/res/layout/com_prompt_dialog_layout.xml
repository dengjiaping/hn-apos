<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/com_dialog_shape"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/com_prompt_dialog_title_tv"
        style="@style/com_dialog_title_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/com_prompt_dialog_tv"
        style="@style/com_dialog_title_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/com_prompt_dialog_title_tv"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/com_prompt_dialog_tv"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" >

        <Button
            android:id="@+id/com_prompt_sure_btn"
            style="@style/com_button_center_style"
            android:text="@string/com_sure_str" />
    </LinearLayout>

</RelativeLayout>