<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/me.andpay.apos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/com_top_layout"
        style="@style/com_native_top_style" >

        <TextView
            android:id="@+id/com_title_tv"
            style="@style/com_top_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读卡器设置" />

        <ImageView
            android:id="@+id/com_back_btn"
            style="@style/com_top_return_button_style" />

        <!-- <Button
            android:id="@+id/com_skip_btn"
            style="@style/com_top_right_button_style"
            android:layout_width="46dp"/>  -->
            
       <!-- <ImageView
            android:id="@+id/scm_qr_scan_btn"
            android:layout_width="36dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/com_icon_qr_code_img_selector" /> -->
    </RelativeLayout>

    <ImageView
        android:id="@+id/scm_imgage_view"
        style="@style/cardreader_set_layout_style"
        android:layout_width="match_parent"
        android:layout_below="@+id/com_top_layout"
        android:gravity="center_horizontal"
        android:src="@drawable/open_device_tip_img" />

    <TextView
        android:id="@+id/scm_text_view"
        style="@style/cardreader_set_textview_style"
        android:layout_below="@+id/scm_imgage_view"
        android:text="请根据图示，选择读卡器类型" />

    <RelativeLayout
        android:id="@+id/scm_cardreader_type_lay_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scm_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/scm_button_one"
            style="@style/cardreader_select_button_style"
            android:layout_alignParentLeft="true"
            android:text="APOS1" />

        <Button
            android:id="@+id/scm_button_two"
            style="@style/cardreader_select_button_style"
            android:layout_centerHorizontal="true"
            android:text="APOS2"
            android:visibility="visible" />

        <Button
            android:id="@+id/scm_button_three"
            style="@style/cardreader_select_button_style"
            android:layout_alignParentRight="true"
            android:text="APOS3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scm_cardreader_type_lay_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scm_cardreader_type_lay_one"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/scm_button_four"
            style="@style/cardreader_select_button_style"
            android:layout_alignParentLeft="true"
            android:text="APOS4" />

        <Button
            android:id="@+id/scm_button_five"
            style="@style/cardreader_select_button_style"
            android:layout_centerHorizontal="true"
            android:text="APOS5"
            android:visibility="visible" />

        <Button
            android:id="@+id/scm_button_six"
            style="@style/cardreader_select_button_style"
            android:layout_alignParentRight="true"
            android:text="APOS6" />
    </RelativeLayout>

</RelativeLayout>