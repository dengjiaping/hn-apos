<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/com_list_f0f0f0_item_selector"
    
    
    android:orientation="vertical"
    android:padding="5dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:visibility="gone"
            android:textSize="18sp"
            android:id="@+id/merge_order_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="并账标题"
            android:textColor="#666666" />

        <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/merge_order_item_borrowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="借  120"
             android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/merge_order_item_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="并账说明"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />

        <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/merge_order_item_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贷  250"
             android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>