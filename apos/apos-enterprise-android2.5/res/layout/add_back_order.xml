<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout style="@style/com_native_top_style" >

        <TextView
            style="@style/com_top_text_style"
            android:text="@string/ms_add_back_order_str" />

        <ImageView
            android:id="@+id/add_back_order_back"
            style="@style/com_top_return_button_style" />
    </RelativeLayout>

    <EditText
        android:id="@+id/add_back_order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:hint="请输入标题" />

    <EditText
        android:id="@+id/add_back_order_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:hint="请输入描述" />

    <GridView
        android:id="@+id/add_back_order_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:horizontalSpacing="5dip"
        android:numColumns="4"
        android:verticalSpacing="3dip" >
    </GridView>

</LinearLayout>