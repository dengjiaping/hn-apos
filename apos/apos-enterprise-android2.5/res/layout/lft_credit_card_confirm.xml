<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout style="@style/com_native_top_style" >

        <TextView
            style="@style/com_top_text_style"
            android:text="@string/lft_credit_card_sure_title_str" />

        <ImageView
            android:id="@+id/lft_credit_confirm_back"
            style="@style/com_top_return_button_style" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="25dip"
        android:background="@drawable/com_icon_frame_img"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="15dip" >

        <TextView
            android:id="@+id/lft_credit_confirm_poundage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="20"
            android:textColor="@color/com_title_normal_col"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lft_credit_confirm_money_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="金额"
            android:textColor="@color/com_title_normal_col"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/lft_credit_confirm_money_title"
            android:layout_marginTop="20dip"
            android:background="@color/transparent" >

            <TextView
                android:id="@+id/lft_credit_confirm_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                android:text="0.00"
                android:textColor="@color/trf_info_amt_col"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/lft_credit_confirm_money"
                android:layout_toLeftOf="@id/lft_credit_confirm_money"
                android:background="@color/transparent"
                android:text="￥"
                android:textColor="@color/trf_info_amt_col"
                android:textSize="40sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/com_icon_frame_img"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="姓名"
                android:textColor="@color/com_title_normal_col"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lft_credit_confirm_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:singleLine="true"
                android:text="单小萍"
                android:textColor="@color/com_title_normal_col"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView style="@style/scm_line_image_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="卡号"
                android:textColor="@color/com_title_normal_col"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lft_credit_confirm_bank_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:singleLine="true"
                android:text="6222 8875 840"
                android:textColor="@color/com_title_normal_col"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView style="@style/scm_line_image_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="银行"
                android:textColor="@color/com_title_normal_col"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lft_credit_confirm_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/transparent"
                android:singleLine="true"
                android:text="招商银行"
                android:textColor="@color/com_title_normal_col"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/lft_credit_confirm_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="25dp"
        android:background="@drawable/com_button_selector"
        android:enabled="true"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="确定"
        android:textColor="@drawable/com_text_color_selector"
        android:textSize="20sp" />

</LinearLayout>