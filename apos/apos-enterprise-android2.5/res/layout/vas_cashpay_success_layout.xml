<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/com_top_layout"
        style="@style/com_native_top_style"
         >

        <TextView
            android:id="@+id/com_title_tv"
            style="@style/com_top_text_style"
            android:text="￥2992.11" />

      <!--   <Button
            android:id="@+id/com_sure_btn"
            style="@style/com_top_right_button_style"
            android:layout_width="46dp"
            android:text="开卡" /> -->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/com_top_layout" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/tam_success_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/com_salesslip_succeed_img" />

            <TextView
                android:id="@+id/vas_msg_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tam_success_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="交易成功，找零10元"
                android:textColor="#666666"
                android:textSize="17dp" />

            <Button
                android:id="@+id/vas_open_card_btn"
                style="@style/com_button_left_style"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/vas_msg_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="17dp"
                android:text="下一步" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>