<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="34dp"
        layout="@layout/vas_purchaseorder_section_layout" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/vas_purchase_order_item_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f5f5f5"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/vas_purchase_order_item_img"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:src="@drawable/com_icon_cash_img" />

        <TextView
            android:id="@+id/vas_purchase_order_item_descs_tv"
            style="@style/vas_item_text_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/vas_purchase_order_item_img"
            android:text="电子卡" />

        <TextView
            android:id="@+id/vas_purchase_order_item_amount_tv"
            style="@style/vas_item_text_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/vas_purchase_order_item_descs_tv"
            android:text="150.00元" />

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/vas_purchase_order_item_count_layout"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/vas_purchase_order_item_amount_tv"
            android:background="@drawable/com_icon_frame_quantity_img"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/vas_purchase_order_item_count_tv"
                style="@style/vas_item_count_text_style"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="30" />
        </RelativeLayout>

        <TextView
            android:id="@+id/vas_purchase_order_item_total_tv"
            style="@style/vas_item_text_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="4dp"
            android:text="#240.00" />
    </RelativeLayout>

</LinearLayout>