<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_solf_keyboard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000" >

    <RelativeLayout
        android:id="@+id/com_board_hid_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:visibility="visible" >

        <ImageButton
            android:id="@+id/com_board_hint_btn"
            android:layout_width="38dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:background="@drawable/com_keyboard_icon_shrink_img"
            android:contentDescription="@string/com_image_content_desc" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/com_board_hid_lay"
        android:background="#222222" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="#00000000"
            android:shrinkColumns="0,1,2,3"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" >

            <TableRow
                android:layout_weight="1"
                android:background="#00000000" >

                <LinearLayout
                    android:id="@+id/com_one_lay"
                    style="@style/keyboard_layout" >

                    <TextView
                        android:id="@+id/com_one_text"
                        style="@style/keyboard_number"
                        android:text="1" />

                    <TextView style="@style/keyboard_char" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/com_tow_lay"
                    style="@style/keyboard_layout" >

                    <TextView
                        android:id="@+id/com_two_text"
                        style="@style/keyboard_number"
                        android:text="2" />

                    <TextView
                        style="@style/keyboard_char"
                        android:text="ABC" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/com_three_lay"
                    style="@style/keyboard_layout" >

                    <TextView
                        android:id="@+id/com_three_text"
                        style="@style/keyboard_number"
                        android:text="3" />

                    <TextView
                        style="@style/keyboard_char"
                        android:text="DEF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/com_delete_imgbt"
                    style="@style/keyboard_layout"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/com_delete_imgbt1"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:background="#00000000"
                        android:src="@drawable/com_keyboard_icon_delete_img" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_weight="1"
                android:background="#00000000" >

                <LinearLayout
                    android:id="@+id/com_four_lay"
                    style="@style/keyboard_layout" >

                    <TextView
                        android:id="@+id/com_four_lay"
                        style="@style/keyboard_number"
                        android:text="4" />

                    <TextView
                        style="@style/keyboard_char"
                        android:text="GHI" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/com_five_lay"
                    style="@style/keyboard_layout" >

                    <TextView
                        android:id="@+id/com_five_text"
                        style="@style/keyboard_number"
                        android:text="5" />

                    <TextView
                        style="@style/keyboard_char"
                        android:text="JKL" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/com_six_lay"
                    style="@style/keyboard_layout" >

                    <TextView
                        android:id="@+id/com_six_text"
                        style="@style/keyboard_number"
                        android:text="6" />

                    <TextView
                        style="@style/keyboard_char"
                        android:text="MNO" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/com_zero_lay"
                    style="@style/keyboard_layout" >

                    <TextView
                        android:id="@+id/com_zero_text"
                        style="@style/keyboard_number"
                        android:text="0" />

                    <TextView style="@style/keyboard_char" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_weight="1"
                android:background="#00000000" >

                <LinearLayout
                    android:id="@+id/com_seven_lay"
                    style="@style/keyboard_layout"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/com_seven_text"
                        style="@style/keyboard_number"
                        android:text="7" />

                    <TextView
                        style="@style/keyboard_char"
                        android:text="PQRS" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/com_eight_lay"
                    style="@style/keyboard_layout" >

                    <TextView
                        android:id="@+id/com_eight_text"
                        style="@style/keyboard_number"
                        android:text="8" />

                    <TextView
                        style="@style/keyboard_char"
                        android:text="TUV" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/com_nine_lay"
                    style="@style/keyboard_layout" >

                    <TextView
                        android:id="@+id/com_nine_text"
                        style="@style/keyboard_number"
                        android:text="9" />

                    <TextView
                        style="@style/keyboard_char"
                        android:text="XYZ" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/com_sure_lay"
                    style="@style/keyboard_layout"
                    android:gravity="center_vertical" >

                    <TextView
                        style="@style/keyboard_number"
                        android:text="@string/com_keyboard_ok_str"
                        android:textSize="20dp" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</RelativeLayout>