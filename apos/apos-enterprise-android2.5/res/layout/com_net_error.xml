<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/com_net_error_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/com_icon_connection_failure_img" />
    
        <TextView
            android:id="@+id/com_net_error_tv"
            style="@style/com_non_str_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/com_net_error_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/com_net_error_prompt_str" />

        <Button
            android:id="@+id/com_net_error_reconnect_btn"
            style="@style/com_button_style"
            android:layout_width="match_parent"
            android:layout_below="@+id/com_net_error_tv"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_marginTop="30dp"
            android:text="@string/com_net_error_button_str" />
    </RelativeLayout>

</RelativeLayout>