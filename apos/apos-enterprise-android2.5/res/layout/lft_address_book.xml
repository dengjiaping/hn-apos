<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout style="@style/com_native_top_style" >

        <TextView
            style="@style/com_top_text_style"
            android:text="@string/lft_address_book" />

        <ImageView
            android:id="@+id/lft_address_book_back"
            style="@style/com_top_return_button_style" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lft_address_book_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/scm_solid_line_img" >
    </ListView>

</LinearLayout>