<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/com_item_lay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/com_list_f5f5f5_item_selector"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:background="@drawable/com_photo_frame_img" >

            <ImageView
                android:id="@+id/vas_product_img"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerInParent="true"
                android:background="@drawable/com_icon_physical_card_img" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vas_product_unit_lay"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/vas_product_name"
            android:background="@drawable/com_icon_frame_quantity_img"
            android:visibility="gone" >

            <TextView
                android:id="@+id/vas_product_unit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="13dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/vas_product_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/relativeLayout1"
            android:background="#00000000"
            android:gravity="center_vertical|right"
            android:text="电子卡120.00"
            android:textColor="#666666"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:background="#00000000" >

            <ImageView
                android:id="@+id/vas_item_img"
                android:visibility="gone"
                style="@style/scm_right_icon_style" />

            <TextView
                android:id="@+id/vas_product_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/vas_item_img"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:text="￥12000.00"
                android:lines="1"
                android:textColor="#666666"
                android:textSize="16dp" />
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/com_list_count_border_img"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/com_item_lay"
        android:background="@drawable/com_solid_line_img" />

    <!--
         <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true" 
        android:background=""/>
    -->

</RelativeLayout>