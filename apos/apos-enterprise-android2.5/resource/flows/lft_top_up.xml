<?xml version="1.0" encoding="UTF-8"?>
<flow-diagram
    begin-node="topup"
    version="1.0" >

    <flow-node
        node-name="topup"
        ref-activity="me.andpay.apos.lft.activity.TopupActivity" >

        <node-complete
            identity="address_book"
            next-node="address_book" />

        <node-complete
            identity="topup_txn"
            sub-finish-cpl="result"
            sub-flow="com_txn_flow" />

        <node-complete
            identity="success"
            next-node="txnSign"/>

        <node-complete
            identity="result"
            ref-activity="me.andpay.apos.lft.activity.LftTradingSuccessfulActivity" />

        <node-complete
            finish-flow="true"
            identity="finish" />
    </flow-node>

    <!-- 交易签名 -->

    <flow-node
        node-name="txnSign"
        ref-activity="me.andpay.apos.tam.activity.SignActivity" >

        <node-complete
            identity="success"
            next-node="postVoucher"
            transfer="Com.TxnFlow.VoucherTransfer" />
    </flow-node>
    <!-- 发送凭证 -->

    <flow-node
        node-name="postVoucher"
        ref-activity="me.andpay.apos.tam.activity.PostVoucherActivity" >

        <node-complete
            finish-flow="true"
            identity="finish" />

        <node-complete
            finish-flow="true"
            identity="success" />
    </flow-node>

    <flow-node
        node-name="address_book"
        ref-activity="me.andpay.apos.lft.activity.AddressBookActivity" >

        <node-complete
            identity="go_home"
            ref-activity="me.andpay.apos.common.activity.HomePageActivity" />
    </flow-node>

</flow-diagram>